<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.youer.androidui">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".FloatWindowActivity">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <data
                    android:host="io.github.pettywing"
                    android:path="/floatwindow"
                    android:scheme="youer" />
            </intent-filter>

        </activity>

        <activity android:name=".coordinate.CollapsingToolbarLayoutActivity" />
        <activity android:name=".coordinate.BottomSheetActivity" />
        <activity
            android:name=".coordinate.CollapsingToolbarLayoutDialogActivity"
            android:screenOrientation="portrait"
            android:theme="@style/dialog"
            android:windowSoftInputMode="adjustResize" />
    </application>

</manifest>